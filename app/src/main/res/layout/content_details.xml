<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:paddingTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center"
            android:hint="@string/edit_name"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/content_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.example.jirakul_sizebook.DetailsActivity"
            android:background="@android:color/white"
            tools:showIn="@layout/activity_details">



            <LinearLayout
                android:id="@+id/date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="25dp"
                    android:paddingRight="20dp"
                    style="@style/HeadColor"
                    android:text="Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    android:paddingRight="20dp"
                    style="@style/HeadColor"
                    android:text="Neck"/>

                <TextView
                    android:id="@+id/bust_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    style="@style/HeadColor"
                    android:paddingRight="20dp"
                    android:text="Bust"/>

                <TextView
                    android:id="@+id/chest_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    style="@style/HeadColor"
                    android:text="Chest"/>

                <TextView
                    android:id="@+id/waist_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    style="@style/HeadColor"
                    android:text="Waist"/>

                <TextView
                    android:id="@+id/hip_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    style="@style/HeadColor"
                    android:text="Hip"/>

                <TextView
                    android:id="@+id/Inseam_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="25dp"
                    android:paddingRight="20dp"
                    style="@style/HeadColor"
                    android:text="Inseam" />

                <TextView
                    android:id="@+id/comment_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingRight="20dp"
                    style="@style/HeadColor"
                    android:text="Comment"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView android:id="@+id/edit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_neck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a"/>

                <TextView android:id="@+id/edit_bust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_chest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_waist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_hip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_inseam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

                <TextView android:id="@+id/edit_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#004D40"
                    android:hint="@string/n_a" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="70dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="inches"
                    style="@style/BodyColorT"
                    android:paddingBottom="35dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    style="@style/BodyColorT"
                    android:text="inches"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    style="@style/BodyColorT"
                    android:text="inches"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    style="@style/BodyColorT"
                    android:text="inches"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    style="@style/BodyColorT"
                    android:text="inches"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BodyColorT"
                    android:text="inches"/>
            </LinearLayout>


        </LinearLayout>


    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E57373"
        android:textColor="@android:color/black"
        android:text="Back to List"/>


</LinearLayout>

</ScrollView>


