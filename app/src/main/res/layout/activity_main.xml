<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jirakul_sizebook.MainActivity"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        android:layout_gravity="left|center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TabWidget>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tabCreator"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Add"
                            android:id="@+id/lblCreatorTitle"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:text="Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="5dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor"
                                    />

                                <TextView
                                    android:text="Date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    style="@style/HeadColor"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:text="Neck"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    style="@style/HeadColor"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:text="Bust"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    style="@style/HeadColor"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chest"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waist"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hip"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inseam"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comment"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:textSize="20sp"
                                    style="@style/HeadColor"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:orientation="vertical">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName"
                                    android:paddingBottom="20dp"
                                    android:id="@+id/txtName"
                                    android:hint="Name"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="date"
                                    android:id="@+id/txtDate"
                                    android:paddingTop="20dp"
                                    android:paddingBottom="20dp"
                                    android:hint="yyyy-mm-dd"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtNeck"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"
                                    android:hint="Neck"
                                    android:inputType="number"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtBust"
                                    android:paddingBottom="25dp"
                                    android:paddingTop="20dp"
                                    android:hint="Bust"
                                    android:inputType="number"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtChest"
                                    android:paddingBottom="25dp"
                                    android:paddingTop="20dp"
                                    android:hint="Chest"
                                    android:inputType="number"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtWaist"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"
                                    android:hint="Waist"
                                    android:inputType="number"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtHip"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"
                                    android:hint="Hip"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtInseam"
                                    android:paddingBottom="25dp"
                                    android:paddingTop="20dp"
                                    android:hint="Inseam"
                                    android:inputType="number"/>

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtComment"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"
                                    android:hint="Comment"
                                    android:inputType="number"/>


                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Save Data"
                            android:id="@+id/btnAdd"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="#E57373"
                            android:textColor="@android:color/black"
                            android:enabled="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabContactList"
                        android:layout_width="match_parent"
                        android:layout_height="502dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="List"
                            android:id="@+id/textView"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/total_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:text="Total Record 0"/>

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/listView"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </FrameLayout>

            </ScrollView>


        </LinearLayout>
    </TabHost>

</LinearLayout>