<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jirakul_sizebook.EditActivity">

<LinearLayout
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/lblCreatorTitle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp"
                        style="@style/HeadColor"
                        />

                    <TextView
                        android:text="Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        style="@style/HeadColor"
                        android:textSize="20sp"/>

                    <TextView
                        android:text="Neck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        style="@style/HeadColor"
                        android:textSize="20sp"/>

                    <TextView
                        android:text="Bust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        style="@style/HeadColor"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chest"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp"
                        style="@style/HeadColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waist"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp"
                        style="@style/HeadColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hip"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp"
                        style="@style/HeadColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inseam"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp"
                        style="@style/HeadColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comment"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp"
                        style="@style/HeadColor"/>


                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:id="@+id/txtNameE"
                android:hint="Name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:id="@+id/txtDateE"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:hint="yyyy-mm-dd"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNeckE"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:hint="Neck"
                android:inputType="number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBustE"
                android:paddingBottom="25dp"
                android:paddingTop="20dp"
                android:hint="Bust"
                android:inputType="number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtChestE"
                android:paddingBottom="25dp"
                android:paddingTop="20dp"
                android:hint="Chest"
                android:inputType="number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWaistE"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:hint="Waist"
                android:inputType="number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtHipE"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:hint="Hip"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtInseamE"
                android:paddingBottom="25dp"
                android:paddingTop="20dp"
                android:hint="Inseam"
                android:inputType="number"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCommentE"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:hint="Comment"
                android:inputType="number"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Data"
        android:id="@+id/btnAdd"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E57373"
        android:textColor="@android:color/black"
        android:enabled="false"/>
</LinearLayout>
</ScrollView>
